<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetailActivity">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_txt"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Walter Wait"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/nickname_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img" />

    <TextView
        android:id="@+id/nickname_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Teste"
        app:layout_constraintStart_toStartOf="@id/name_txt"
        app:layout_constraintTop_toBottomOf="@id/name_txt" />

    <TextView
        android:id="@+id/information1_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Status:"
        android:textColor="@color/black2"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/nickname_txt"
        app:layout_constraintTop_toBottomOf="@id/nickname_txt" />

    <TextView
        android:id="@+id/status_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/information1_txt"
        app:layout_constraintStart_toEndOf="@id/information1_txt"
        app:layout_constraintTop_toTopOf="@id/information1_txt" />

    <TextView
        android:id="@+id/information2_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Ator:"
        android:textColor="@color/black2"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/information1_txt"
        app:layout_constraintTop_toBottomOf="@id/information1_txt" />

    <TextView
        android:id="@+id/author_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/information2_txt"
        app:layout_constraintStart_toEndOf="@id/information2_txt"
        app:layout_constraintTop_toTopOf="@id/information2_txt" />

    <TextView
        android:id="@+id/information3_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:text="AniversÃ¡rio"
        android:textColor="@color/black2"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/information2_txt"
        app:layout_constraintTop_toBottomOf="@id/information2_txt" />

    <TextView
        android:id="@+id/birthday_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:textSize="18sp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@id/information3_txt"
        app:layout_constraintStart_toEndOf="@id/information3_txt"
        app:layout_constraintTop_toTopOf="@id/information3_txt" />

</androidx.constraintlayout.widget.ConstraintLayout>
